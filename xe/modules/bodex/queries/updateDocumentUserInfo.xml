<query id="updateDocumentUserInfo" action="update">
    <tables>
        <table name="documents" />
    </tables>
    <columns>
        <column name="member_srl" var="member_srl" default="0" />
        <column name="user_id" var="user_id" />
        <column name="user_name" var="user_name" default="" />
        <column name="nick_name" var="nick_name" default="" />
        <column name="email_address" var="email_address" default="" />
        <column name="homepage" var="homepage" default="" />
    </columns>
    <conditions>
        <condition operation="equal" column="document_srl" var="document_srl" filter="number" notnull="notnull" />
    </conditions>
</query>
