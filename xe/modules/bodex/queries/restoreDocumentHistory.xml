<query id="restoreDocumentHistory" action="update">
    <tables>
        <table name="documents" />
    </tables>
    <columns>
        <column name="content" var="content" notnull="notnull" />
        <column name="last_update" var="last_update" notnull="notnull" />
        <column name="ipaddress" var="ipaddress" notnull="notnull" />
        <column name="member_srl" var="member_srl" notnull="notnull" />
        <column name="email_address" var="email_address" notnull="notnull" />
        <column name="homepage" var="homepage" notnull="notnull" />
        <column name="user_id" var="user_id" notnull="notnull" />
        <column name="user_name" var="user_name" notnull="notnull" />
        <column name="nick_name" var="nick_name" notnull="notnull" />
    </columns>
    <conditions>
        <condition operation="equal" column="document_srl" var="document_srl" filter="number" notnull="notnull" />
    </conditions>
</query>
